{
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended"],
  "env": {
    "node": true,
    "browser": true
  },
  "globals": {
    "Promise": true,
    "Toastify": true,
    "electronAPI": true,
    "$success": true,
    "$error": true,
    "$warning": true,
    "handleSave": true
  },
  "rules": {
    "semi": 2
  }
}
